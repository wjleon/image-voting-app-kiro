{
  "name": "ai-image-voting-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "ingest": "npx tsx scripts/run-ingestion.ts && npm run db:seed && npx tsx scripts/translate-openai.ts && npx tsx scripts/check-translations.ts",
    "ingest:full": "./scripts/ingest-and-translate.sh",
    "anonymize:slugs": "npx tsx scripts/anonymize-slugs.ts",
    "anonymize:images": "npx tsx scripts/anonymize-images.ts",
    "anonymize": "npm run anonymize:slugs && npm run anonymize:images"
  },
  "dependencies": {
    "@prisma/client": "^6.0.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.555.0",
    "next": "^15.1.0",
    "next-intl": "^4.5.6",
    "prisma": "^6.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0",
    "ua-parser-js": "^2.0.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ua-parser-js": "^0.7.39",
    "@vitest/coverage-v8": "^4.0.14",
    "autoprefixer": "^10.4.22",
    "eslint": "^9",
    "eslint-config-next": "^15.1.0",
    "fast-check": "^4.3.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "vitest": "^4.0.14"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  }
}
